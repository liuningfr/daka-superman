<view class="container">
  <view class="card">
    <image class="circle" src="../../statics/circle.png" />
    <image class="edit" bindtap="goEdit" src="../../statics/edit.png" />
    <view class="info">
      <image class="avatar" src="../../statics/zaoshui.png" />
      <view class="title">坚持每天早睡</view>
      <view class="desc">您已坚持678天</view>
    </view>
    <view class="record">
      <view class="item">
        <text>累计打卡</text>
        <text>32</text>
      </view>
      <view class="item">
        <text>当前连续</text>
        <text>6</text>
      </view>
      <view class="item">
        <text>最高连续</text>
        <text>12</text>
      </view>
    </view>
  </view>
  <view wx:if="{{isDone}}" class="btn done">
    <image class="smile" src="../../statics/smile.png" />
    <view>恭喜你，完成打卡</view>
  </view>
  <view wx:else class="btn" bindtap="touchDaka">
    <view>轻触打卡</view>
  </view>
  <image class="logo" src="../../statics/logo.png" style="{{iPhone ? 'bottom: 96rpx' : ''}}" />
</view>